<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <ImageView
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageLionPng"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/color7A0909"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/lion" />


    <ImageView
        android:layout_margin="20dp"
        android:layout_below="@+id/imageLionPng"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageLionWebp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/color7A0909"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/lion" />


    <ImageView
        android:id="@+id/imageSvg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/imageLionWebp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_twotone_toys_24"
        app:strokeColor="@color/color7A0909"
        app:strokeWidth="1dp"
        app:tint="#DF3030" />


</RelativeLayout>